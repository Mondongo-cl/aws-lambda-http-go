    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Launch",
            "invokeTarget":{
                "target": "code",
                "projectRoot": "${workspaceFolder}/src",
                "lambdaHandler": "main.handleRequest"
            },
            "sam": {
                "dockerNetwork": "go-services"
            },
            "lambda": {
                "runtime": "go1.x",
                "payload": {
                    "path": "payload.json"                    
                },
                "environmentVariables": {
                    "servername":"mysql1",
                    "serverport":"3306",
                    "username":"root",
                    "password":"123456",
                    "database":"testdb"
                },
            }
            
        }
    ]
}